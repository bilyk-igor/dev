package life;

public class Man {

	private String name;
	private int money;
	private Job job;
	private Gold gold;
	
	
	public Man(String name, int money) {
		super();
		this.name = name;
		this.money = money;
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public int getMoney() {
		return money;
	}


	public void setMoney(int money) {
		this.money = money;
	}


	public Job getJob() {
		return job;
	}


	public void setJob(Job job) {
		
		money = money + job.getPayment();
		
		this.job = job;
	}


	public Gold getGold() {
		return gold;
	}


	public void setGold(Gold gold) {
		this.gold = gold;
	}


	
	
	
	
	
	
}
